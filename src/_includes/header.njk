<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <a class="navbar-brand mt-2 mt-lg-0" href="/accueil">{% EleventyImage "/images/logo.png", "Logo - Charles Cantin", "159.035% 285.526%" %}</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span ><i class="fas fa-bars" style="font-size:28px;"></i></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      {% if navigation.items %}
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          {% for item in navigation.items %}
            <li class="nav__item">
              <a class="nav-link {{ 'active' if item.url in page.url }}" href="{{ item.url }}">{{ item.text }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </div>
</nav>